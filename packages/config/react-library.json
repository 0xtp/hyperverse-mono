{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "include": ["source/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "module": "ESNext",
    "rootDir": "source",
    "outDir": "distribution",
    "moduleResolution": "Node",
    "jsx": "react-jsx"
  }
}
