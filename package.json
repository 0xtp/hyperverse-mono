{
	"name": "hyperverse",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/**/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build --no-deps --scope=@decentology* --scope=!@decentology/samples* --scope=!@decentology/hyperverse-*-starterkit --force",
		"deploy": "turbo run deploy --no-deps --scope=@decentology/hyperverse* --scope=!@decentology/hyperverse-*-starterkit --force",
		"lint": "turbo run lint --no-deps --scope=@decentology/hyperverse*",
		"dev": "turbo run dev --parallel",
		"clean": "turbo run clean --parallel",
		"dev:algorand": "turbo run dev --cwd=./apps/algorand --parallel ",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"@changesets/cli": "^2.20.0",
		"@parcel/packager-ts": "^2.2.1",
		"@parcel/transformer-typescript-types": "^2.2.1",
		"@types/fs-extra": "^9.0.13",
		"chalk": "4",
		"fs-extra": "^10.0.0",
		"prettier": "^2.5.1",
		"tiny-glob": "^0.2.9",
		"ts-node": "^10.5.0",
		"turbo": "^1.1.4",
		"typescript": ">=3.0.0"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	},
	"dependencies": {
		"turborepo": "^0.0.1"
	}
}
