{
  "compilerOptions": {
    "composite": true,
    "target": "es2016",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictBindCallApply": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@decentology/*": ["packages/*/source"]
    }
  },
  "exclude": ["node_modules", "distribution"],
  "include": ["./**/*", "./**/*.json"]
}
